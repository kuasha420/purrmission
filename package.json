{
  "name": "purrmission",
  "version": "0.0.1",
  "description": "Discord-based multi-user approval gate with HTTP API for external services",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "turbo run build",
    "dev:purrmission": "turbo run dev --filter @purrfecthq/purrmission-bot",
    "discord:deploy-commands": "turbo run discord:deploy-commands",
    "prod:purrmission": "node apps/purrmission-bot/dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "ops:backup": "tsx scripts/backup-db.ts",
    "ops:rotate-keys": "tsx scripts/rotate-keys.ts",
    "ops:encrypt-totp": "tsx scripts/encrypt-totp-secrets.ts",
    "ops:test": "node --import tsx --test scripts/ops.test.ts"
  },
  "packageManager": "pnpm@9.15.1",
  "dependencies": {
    "@prisma/client": "6.19.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "prisma": "6.19.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}