{
  "name": "purrmission",
  "version": "0.0.1",
  "description": "Discord-based multi-user approval gate with HTTP API for external services",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "yarn workspace @purrfecthq/purrmission-bot build",
    "dev:purrmission": "yarn workspace @purrfecthq/purrmission-bot dev",
    "discord:deploy-commands": "yarn workspace @purrfecthq/purrmission-bot discord:deploy-commands",
    "prod:purrmission": "node apps/purrmission-bot/dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format"
  },
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "prisma": "^6.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
